<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home Page</title>
    <style>
            .complaint-item {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            position: relative;
        }
        .complaint-item button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            padding: 5px 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .complaint-item button:hover {
            background-color: #0056b3;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }
        h2 {
            color: #555;
            margin-bottom: 10px;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
        }
        strong {
            color: #007bff;
        }
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .button-container {
            text-align: center;
        }

        /* Button Styles */
        button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 0 10px;
        }

        button:hover {
        background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome <%= adminName %>!</h1>
        <h2>Complaints</h2>
        <ul>
            <% complaints.forEach(function(complaint) { %>
                <div>
                    <li>
                        <strong>Content:</strong> <%= complaint.content %><br>
                        <strong>Status:</strong> <%= complaint.complaint_status %><br>
                        <button data-id="<%= complaint.complaint_id %>" onclick="openModal(<%= JSON.stringify(complaint) %>)">Pick</button>
                    </li>
                </div>
            <% }); %>
            <div id="complaintModal" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeModal()">&times;</span>
                    <h3 id="modalTitle"></h3>
                    <p id="modalContent"></p>
                    <p id="modalStatus"></p>
                    <div class="button-container">
                        <a href="#" id="declineBtn" class="action-btn">Decline</a>
                        <a href="#" id="resolveBtn" class="action-btn">Resolved</a>
                    </div>
                </div>
            </div>

    <script>
        // Function to display modal
        function openModal(complaint) {
            var modal = document.getElementById("complaintModal");
            var title = document.getElementById("modalTitle");
            var content = document.getElementById("modalContent");
            var status = document.getElementById("modalStatus");

            title.innerHTML = "Complaint ID: " + complaint.complaint_id;
            content.innerHTML = "**" + complaint.content;
            status.innerHTML = "Status: " + complaint.complaint_status;

            modal.style.display = "block";
        }

        // Function to close modal
        function closeModal() {
            var modal = document.getElementById("complaintModal");
            modal.style.display = "none";
        }
        function openModal(complaint) {
            // Update the modal content
            document.getElementById('modalTitle').textContent = complaint.title;
            document.getElementById('modalContent').textContent = complaint.content;
            document.getElementById('modalStatus').textContent = complaint.complaint_status;
        
            // Update the href attributes of the buttons
            document.getElementById('declineBtn').href = '/declineComplaint/' + complaint.complaint_id;
            document.getElementById('resolveBtn').href = '/resolveComplaint/' + complaint.complaint_id;
        
            // Show the modal
            document.getElementById('complaintModal').style.display = 'block';
        }

    </script>
</body>
</html>
